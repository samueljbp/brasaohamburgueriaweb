<div class="row">
    <div class="col-sm-12">
        <div class="table-responsive">
            <table class="table table-striped" ng-show="pedidoSelecionado.itens != null && pedidoSelecionado.itens.length > 0">
                <thead>
                    <tr>
                        <th class="col-sm-1">
                            Nº Item
                        </th>
                        <th class="col-sm-4">
                            <div class="row">
                                Descrição
                            </div>
                        </th>
                        <th class="col-sm-1">
                            Quantidade
                        </th>
                        <th class="col-sm-2">
                            Preço unitário
                        </th>
                        <th class="col-sm-1">
                            Extras
                        </th>
                        <th class="col-sm-2">
                            Total
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in pedidoSelecionado.itens">
                        <td>
                            {{item.seqItem}}
                        </td>
                        <td class="col-sm-4">
                            <div class="row">
                                {{item.descricaoItem}}
                            </div>
                            <div class="row" ng-show="item.obs != null && item.obs.length > 0">
                                <span ng-repeat="obs in item.obs track by $index" ng-show="obs.codObservacao != null" class="small text-warning">{{obs.descricaoObservacao}}<span ng-show="$index < item.obs.length - 1">, </span></span>
                            </div>
                            <div class="row" ng-show="item.extras != null && item.extras.length > 0">
                                <span ng-repeat="extra in item.extras track by $index" ng-show="extra.codOpcaoExtra != null" class="small text-danger">{{extra.descricaoOpcaoExtra}}: R$ {{extra.preco | currency: "R$ "}}<span ng-show="$index < item.extras.length - 1">, </span></span>
                            </div>
                        </td>
                        <td>
                            {{item.quantidade}}
                        </td>
                        <td>
                            <div ng-show="item.percentualDesconto > 0">
                                <span class="tachado" style="margin-bottom: 0px">{{item.precoUnitario | currency: "R$ "}}</span><br />
                                <span style="margin-top: 0px" class="text-success"><strong>{{item.percentualDesconto | currency: ""}}% off - Por {{item.precoUnitarioComDesconto | currency: "R$ "}}</strong></span>
                            </div>
                            <div ng-show="item.percentualDesconto <= 0">
                                {{item.precoUnitario | currency: "R$ "}}
                            </div>
                        </td>
                        <td>
                            {{item.valorExtras | currency: "R$ "}}
                        </td>
                        <td>
                            {{item.valorTotalItem | currency: "R$ "}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            -
                        </td>
                        <td class="col-sm-4">
                            <div class="row">
                                <span class="text-info">Taxa de entrega</span>
                            </div>
                        </td>
                        <td>
                            1
                        </td>
                        <td>
                            {{pedidoSelecionado.taxaEntrega | currency: "R$ "}}
                        </td>
                        <td>
                            -
                        </td>
                        <td>
                            {{pedidoSelecionado.taxaEntrega | currency: "R$ "}}
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row hidden-sm hidden-md hidden-lg" ng-show="pedidoSelecionado.itens != null && pedidoSelecionado.itens.length > 0" style="margin-top: -10px">
            <div class="col-xs-12 text-right">
                <small>Arraste a tabela lateralmente</small>
            </div>
        </div>
    </div>
</div>